<Table>:
    BackgroundBoxLayout:
        id: product_table
        size: root.size
        pos: root.pos
        background_color: 0, 73/255, 122/255, 1
        size_hint_y: .8
        orientation: "vertical"
        BackgroundBoxLayout:
            id: table_header
            background_color: 20/255, 60/255, 100/255, 1
            orientation: "horizontal"
            size_hint_y: .1
            padding_x: 5
        ScrollView:
            id: scroll_view
            do_scroll_x: False
            do_scroll_y: True
            BackgroundBoxLayout:
                id: table_body
                background_color: 60/255, 60/255, 100/255, 1
                orientation: "vertical"
                size_hint_y: 2