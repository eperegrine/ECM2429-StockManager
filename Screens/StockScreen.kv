#:import BackgroundColor BackgroundColor
#:import Table Widgets
<StockScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            # TO BE REMOVED ANYWAY
            padding_x: 25
            text_size: root.width, None
            text: "Stock"
            halign: "left"
            size_hint_y: .1
        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: "horizontal"
            size_hint_y: .1
            Button:
                id: add_button
                text: "Add Stock"
            Button:
                id: refresh_button
                text: "Refresh"
        Table:
            id: table

<QuantityTableCell@BackgroundColor>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "horizontal"
        Button:
            id: remove_button
            text: "-"
        Label:
            id: quantity_label
            text: "2"
        Button:
            id: add_button
            text: "+"

<StockActionsTableCell>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "horizontal"
        Button:
            id: edit_button
            text: "Edit"
        Button:
            id: remove_button
            text: "Remove"
