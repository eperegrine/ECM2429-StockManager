#:import BackgroundColor Utils.BackgroundColor
#:import Table Widgets
<ProductsScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            # TO BE REMOVED ANYWAY
            padding_x: 25
            text_size: root.width, None
            text: "Products"
            halign: "left"
            size_hint_y: .1
        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: "horizontal"
            size_hint_y: .1
            Button:
                id: add_button
                text: "Add Product"
            Button:
                id: refresh_button
                text: "Refresh"
        Table:
            id: product_table

<ProductActionsTableCell>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "horizontal"
        Button:
            id: edit_button
            text: "Edit"
        Button:
            id: remove_button
            text: "Remove"

