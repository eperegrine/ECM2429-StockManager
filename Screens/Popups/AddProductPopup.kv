#import MinMaxIntInput Widgets
<AddProductPopup@Popup>:
    auto_dismiss: False
    title: "Create Product"
    BoxLayout:
        orientation: "vertical"
        size: root.size
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .2
            Label:
                text: "Name: "
            TextInput:
                id: name_input
                multiline: False
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .4
            Label:
                text: "Description: "
            TextInput:
                id: description_input
                multiline: True
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .2
            Label:
                text: "Target Stock (>= 1): "
            MinMaxIntInput:
                id: target_stock_input
                min: 1
