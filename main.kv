#:import Factory kivy.factory.Factory
#:import Counter Widgets
#:import BackgroundColor BackgroundColor

<MyPopup@Popup>:
    auto_dismiss: False
    title: "Popup!"
    Button:
        text: 'Close me!'
        on_release: root.dismiss()
<MainApp>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        BoxLayout
            id: nav-bar
            size_hint_y: .1
            orientation: "horizontal"
            #The buttons are populated by the class to allow for more screens to be added easily
        ScreenManager
            id: screen-manager