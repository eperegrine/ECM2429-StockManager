#:import Factory kivy.factory.Factory
#:import Counter Widgets
#:import BackgroundColor Utils.BackgroundColor

<MyPopup@Popup>:
    auto_dismiss: False
    title: "Popup!"
    Button:
        text: 'Close me!'
        on_release: root.dismiss()
<MainApp>:
    StackLayout:
        orientation: 'tb-lr'
        size: root.size
        BackgroundLabel:
            text: "Main App"
            font_size: 120
            background_color: 1,1,1
            color: 0,0,0
            size_hint: 1, 0.2
        BackgroundBoxLayout:
            background_color: .2, .5, .4, 1
            size_hint: 1, 0.75
            orientation: "horizontal"
            Counter:
                id: counter_a
                count: 100
            Counter:
                id: counter_b
        Button:
            size_hint: 1, .05
            text: "Alert Me"
            background_color: 1, 0, 0, 1
            on_press: Factory.MyPopup().open()