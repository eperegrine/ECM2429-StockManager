<Counter>:
    count: 0
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            id: count_lbl
            text: "Counter: 0"
            size_hint: 1, .8
        Button:
            id: increment_btn
            text: "Add to count"
            size_hint: 1, 0.2
            on_press: root.increment()