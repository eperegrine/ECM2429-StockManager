<OrderDetailScreen>:
    BoxLayout
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Button:
            text: "Back to all orders"
#            size_hint_y: .1
            size_hint_min_y: cm(1)
            size_hint_max_y: cm(1.5)
            on_press:
                root.manager.transition.direction = 'down'
                root.manager.current = 'orders'
        Label:
#            size_hint_y: .2
            id: order_header_label
            markup: True
            text: "Order Details #1234"
            size_hint_max_y: cm(2)

            font_hinting: "light"
            font_size: 60
        BoxLayout:
            orientation: "horizontal"
            ScrollView:
                Label:
                    id: order_details_label
                    markup: True
                    text_size: self.size
                    shorten: False
                    valign: "top"
                    halign: "left"
                    size_hint_min_y: cm(9)
                    padding_x: cm(1)
                    text:
                        "[size=40][b][u]Customer[/u][/b][/size]\n" + \
                        "[b]Name[/b]: John Smith\n" + \
                        "[b]Address[/b]: 123 Fake St"
            BoxLayout:
                orientation: "vertical"
                size_hint_min_y: cm(1)
                size_hint_max_y: cm(2)
                padding: cm(1), 0
                Button:
                    text: "Print Address Label"
                    on_press: root.print_address()
                Button:
                    text: "Print Packing List"
                    on_press: root.print_packing_list()
                Button:
                    text: "Open Mail Client"
                    on_press: root.open_mail_client()
                Widget:
                    size_hint_min_y: cm(1)
