#:import Counter Widgets

<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Settings"
        Label:
            text: "The settings screen in the MVP is used for testing purposes"
        Button:
            text: "Test Print"
            on_press: root.test_print()
        Button:
            text: "Reset Database"
            on_press: root.reset_database()
        Button:
            text: "Generate Sample Data"
            on_press: root.generate_data()