#:import table widgets

<OrdersScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            # TO BE REMOVED ANYWAY
            padding_x: 25
            text_size: root.width, None
            text: "Orders"
            halign: "left"
            size_hint_y: .1
        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: "horizontal"
            size_hint_y: .1
            Button:
                id: refresh_button
                text: "Refresh Table"
            Button:
                id: sync_button
                text: "Sync"
        Table:
            id: table

<OrdersActionTableCell>:
    BoxLayout:
        id: layout
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Button:
            id: view_button
            text: "View Details"
        Button:
            id: confirm_button
            background_color: 0, 1,0,1
            text: "Confirm Order"
        Button:
            id: pick_stock_button
            text: "Open stock-picker"
        Button:
            id: ship_button
            text: "Ship"
        Button:
            id: mark_shipped_button
            text: "Mark as Shipped"
        Button:
            id: close_button
            text: "Close"
