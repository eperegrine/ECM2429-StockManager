#import MinMaxIntInput Widgets
<StockItemEditorPopup@Popup>:
    auto_dismiss: False
    title: "Stock"
    BoxLayout:
        orientation: "vertical"
        size: root.size
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .2
            Label:
                text: "Product: "
            Spinner:
                id: product_spinner
                text: 'Choose Product'
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .2
            Label:
                text: "Location: "
            TextInput:
                id: location_input
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .2
            Label:
                text: "Stock Level: "
            MinMaxIntInput:
                id: quantity_input
                min: 0
        Widget:
            size_hint_y: .1
            #Padding Box
        BoxLayout:
            size_hint_y: .1
            orientation: "horizontal"
            Button:
                id: save_btn
                text: 'Save'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()